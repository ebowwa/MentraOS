/*
 * Simplified Display Configuration for LVGL Testing
 * Uses dummy display driver to test LVGL functionality
 */

/ {
	chosen {
		zephyr,display = &dummy_display;
	};

	/* Dummy display device for LVGL testing */
	dummy_display: dummy_display {
		compatible = "zephyr,dummy-display";
		status = "okay";
		width = <640>;
		height = <480>;
		refresh-time-ms = <16>;  /* ~60 FPS */
	};
};
