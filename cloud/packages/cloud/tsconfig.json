{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",

    "paths": {
      "@mentra/sdk": ["../sdk/dist"],
      "@mentra/types": ["./node_modules/@mentra/types/src/index.ts"],
      "@mentra/types/*": ["./node_modules/@mentra/types/src/*"],
      "bun-types": ["./node_modules/bun-types"]
    },

    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/**/tests/**/*"]
}
